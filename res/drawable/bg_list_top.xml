<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:height="10dp"
    >
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/list_solid_border" />
        </shape>
    </item>
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/list_solid_gradient"
                android:endColor="#ff000000"
                android:type="linear"
                android:angle="270"
                />
        </shape>
    </item>
</layer-list>